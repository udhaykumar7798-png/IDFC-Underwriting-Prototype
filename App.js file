// Simple UI toggle between sections
function showSection(sectionId) {
  document.querySelectorAll('section').forEach(sec => {
    sec.classList.add('hidden');
    sec.classList.remove('active');
  });
  document.getElementById(sectionId).classList.remove('hidden');
  document.getElementById(sectionId).classList.add('active');
}

// Risk score calculator based on loan amount, UPI transactions, and payment failures
function calculateRiskScore(loanAmount, upiTransactions, paymentFailures) {
  let baseScore = 500;
  baseScore += Math.min(loanAmount / 10000, 200);
  baseScore += Math.min(upiTransactions / 5, 150);
  baseScore -= paymentFailures * 50;
  return Math.max(0, Math.min(baseScore, 850)); // Clamp score between 0 and 850
}

// Property valuation calculator using circle rate and property size
const circleRates = {
  "Pune - Baner": 12500,
  "Indore - Vijay Nagar": 8500,
  "Nashik - College Road": 6800,
};

document.getElementById('calculateRiskBtn').addEventListener('click', () => {
  const loanAmt = Number(document.getElementById('loanAmount').value);
  const upiTxns = Number(document.getElementById('upiTxns').value);
  const payFails = Number(document.getElementById('paymentFailures').value);
  const score = calculateRiskScore(loanAmt, upiTxns, payFails);
  document.getElementById('riskScoreDisplay').innerText = `Risk Score: ${score}`;
});

document.getElementById('calculateValueBtn').addEventListener('click', () => {
  const location = document.getElementById('location').value;
  const size = Number(document.getElementById('propertySize').value);
  const estimatedValue = circleRates[location] * size;
  document.getElementById('valuationDisplay').innerText = `Estimated Property Value: â‚¹${estimatedValue.toLocaleString()}`;
});
